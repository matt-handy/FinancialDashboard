<h1>New Plot!</h1>
<%= form_for :plot, url: plots_path do |p| %>
<%= p.label :name %><br>
<%= p.text_field :name %><br><br>
<%= p.label :days_duration %><br>
<%= p.text_field :days_duration %><br><br>
<%= select_tag "indicators",
	options_from_collection_for_select(Indicator.all, 'id', 'name'),
	{ :multiple => true, :size => 10} %>
<%= p.submit %>
<% end %>
